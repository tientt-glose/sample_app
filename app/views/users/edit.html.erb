<% provide :title, t(".name") %>
<% provide :button_text, t(".u_save") %>
<% provide :path_text, user_path(current_user) %>
<h1><%= yield :title %> </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" rel="noopener" target="_blank">
        <%= t ".u_ava" %></a>
    </div>
  </div>
</div>
