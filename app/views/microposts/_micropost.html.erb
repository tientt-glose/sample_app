<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.m_ava_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".time_1" %> <%= time_ago_in_words(micropost.created_at) %>
    <%= t ".time_2" %>
    <% if current_user.current_user? micropost.user %>
      <%= link_to t(".delete"), micropost, method: :delete,
        data: {confirm: t(".confirm")} %>
    <% end %>
  </span>
</li>
